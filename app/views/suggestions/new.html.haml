-content_for :head do 
  %title Suggest How BetterSheet can make Your Life Better
  %meta{ :name => :keywords, :content => 'cost estimation, cost tracking'}
  
#suggestion.content.suggestions
  %h1
    -if notice
      =notice
    -else
      Got an idea?  We'd love to hear it!

  %h2
    What can we do to help make cost management less painful for You?
    
  = form_for @suggestion do |f|
    -if @suggestion.errors.any?
      #error_explanation
        %h2= "#{pluralize(@suggestion.errors.count, "error")} prohibited this suggestion from being saved:"
        %ul
          - @suggestion.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.label :email, 'Your email'
      = f.text_field :email, {:placeholder => "Your email"}
    .field
      = f.label :suggestion
      = f.text_area :suggestion, {:placeholder => "Your suggestion"}
    .actions
      = f.submit 'Suggest', {:class => :button}

